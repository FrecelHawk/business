<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_marginLeft"
        android:layout_marginRight="@dimen/activity_marginRight"
        android:layout_marginTop="@dimen/activity_marginTop"
        android:orientation="vertical"
        android:background="@color/white"
        tools:ignore="RtlHardcoded" >

        <include
            android:layout_width="match_parent"
            android:layout_height="50dp"
            layout="@layout/carnest_common_modify_bar" />

    </LinearLayout>
            
     <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="4dp"
            android:text="最多可输入15个字"
            android:textColor="@color/news_font"
            android:textSize="10sp"
            tools:ignore="SmallSp" />

</LinearLayout>